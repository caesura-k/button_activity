<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <gradient
                android:type="sweep"
                android:centerX="1"
                android:centerY="0.5"
                android:startColor="@color/colorMediumPurple"
                android:endColor="@color/colorKhaki1"/>
            <stroke
                android:width="2dp"
                android:color="@color/colorKhaki1"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <solid android:color="@color/colorThistle" />
            <stroke
            android:width="5dp"
            android:dashWidth="10dp"
            android:dashGap="10dp"
            android:color="@color/colorKhaki1"/>
        </shape>
    </item>
</selector>
<!--使用selector状态选择器，可以设置button点击前后的不同shape-->
